        },
        options: [],
        selectedItem: {},
        headers: { authorization: localStorage.getItem('userId') },
        uploadParams: { cmarketMerchantId: '' },
        action: process.env.API_ROOT + '/engine-console/console/uploadFile/uploadPicture.do',
        previewPic: ''
      }
    },
    methods: {
